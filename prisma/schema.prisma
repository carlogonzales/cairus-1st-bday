generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"

  // NOTE: Don't remove
  // Runtime supported values nodejs, deno, bun, workerd (alias cloudflare),
  // vercel-edge (alias edge-light), react-native.
  runtime      = "nodejs"
  moduleFormat = "esm"
}

datasource db {
  provider = "postgresql"
}

// ---------- Enums ----------
enum RsvpStatus {
  YES
  NO
}

// ---------- Models ----------
model InvitationRsvp {
  id   String @id @default(uuid()) @db.Uuid
  code String @unique @db.Uuid

  name String     @db.VarChar(120)
  rsvp RsvpStatus

  adults   Int
  children Int?

  email   String? @db.VarChar(255)
  phone   String? @db.VarChar(40)
  message String? @db.Text

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([code])
}
